# include <bits/stdc++.h>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
		int n;
		cin>>n;
		int a[n]={0},b[10]={0};
		int i,sum=0,c;
				for(i=0;i<n;i++){
					cin>>a[i]>>c;
						if(a[i]==1){if (c>b[1])b[1]=c;}
							else if	(a[i]==2){if (c>b[2])b[2]=c;}
								else if	(a[i]==3){if (c>b[3])b[3]=c;}
									else if	(a[i]==4){if (c>b[4])b[4]=c;}
										else if	(a[i]==5){if (c>b[5])b[5]=c;}
											else if	(a[i]==6){if (c>b[6])b[6]=c;}
												else if	(a[i]==7){if (c>b[7])b[7]=c;}
													else if	(a[i]==8){if (c>b[8])b[8]=c;}		
				}
				for(i=1;i<=8;i++){
					sum+=b[i];
				}


		cout<<sum<<endl;



			



	}
}