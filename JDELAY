# include<iostream>
#include <bits/stdc++.h>
#include<algorithm>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,i,sum=0;
        cin>>n;
        int a[n][2];
        for(i=0;i<n;i++){
            cin>>a[i][1]>>a[i][2];
            if((a[i][2]-a[i][1])>5){sum=sum+1;}
            
        }
        cout<<sum<<endl;
        
        
       
        
        
        
        
        
    }
}