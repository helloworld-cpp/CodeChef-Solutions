#include<bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
        int a,b,c;
        cin>>a>>b>>c;
        int r1=abs(c-a);
        int r2=abs(c-b);
        if (r1>r2){cout<<"Lion B"<<endl;}
        else if (r1<r2){cout<<"Lion A"<<endl;}
        else{cout<<"Deer C"<<endl;}
        












	}
}