#include<iostream>
#include<math.h>
#include <algorithm>

using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
	   int n,k,i,j,sum=0,max=0;
	   cin>>n>>k;
	  int a[n];
	  for(i=1;i<=n;i++){
	       cin>>a[i];
	  }
	  for(i=1;i<=(n-k+1);i++){sum=0;
	      for(j=i;j<=(i+k-1);j++){
	          sum=sum+a[j];
	      }
	      if(sum>max){max=sum;}
	  }
	  cout<<max<<endl;
	  
	  
	  
	 
	   
	   
	}
		
return 0;
}