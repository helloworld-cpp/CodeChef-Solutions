# include <bits/stdc++.h>
using namespace std;

int main(){
  int t;
  cin>>t;
  long long int m,c; cin>>m>>c;
  long long int max1=0;
  long long int max2=0;
  while(t--){
  		long long int x,y,p; cin>>x>>y>>p;
  		long long int temp=(m*x)+c-y;
  		if(temp>0){
  			max1=max1+p;
  		}
  		else{
  			max2=max2+p;
  		}

  }
  if(max1>max2){cout<<max1<<endl;}
  else{cout<<max2<<endl;}
  
}