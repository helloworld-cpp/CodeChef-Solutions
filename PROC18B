# include<iostream>
#include<algorithm>
using namespace std;
int main(){
    int t,k;
    cin>>t;
    while(t--){
        int n,i;
        cin>>n;
        int array[n];
        for(i=0;i<n;i++){
            cin>>array[i];
        }
        sort(array,array+n);
        double k=array[n-1];
        for(i=n-2;i>=0;i--){
            k=(k+array[i])/2;
        }
        printf("%lf \n",k);
        
        
        
        
        
        
        
        
    }
}